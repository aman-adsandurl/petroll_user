<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen10"
    app:cardElevation="@dimen/dimen5"
    app:cardCornerRadius="@dimen/dimen10"
    app:cardBackgroundColor="@color/product_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_heart"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen10"
            android:layout_width="@dimen/dimen20"
            android:layout_height="@dimen/dimen20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen5"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen150"
            android:padding="@dimen/dimen8"
            android:src="@drawable/ic_product"/>

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.appcompat.widget.AppCompatTextView
                  android:layout_width="match_parent"
                  android:text="North paw grain free"
                  android:textSize="@dimen/text16"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_regular"
                  android:gravity="center"
                  android:layout_height="wrap_content"/>

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="match_parent"
                      android:text="(Adult) 2KG"
                      android:layout_alignParentStart="true"
                      android:textSize="@dimen/text16"
                      android:layout_marginTop="@dimen/dimen5"
                      android:textColor="@color/black"
                      android:fontFamily="@font/poppins_regular"
                      android:layout_height="wrap_content"/>

                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_height="@dimen/dimen20">

                      <ImageView
                          android:id="@+id/iv_star"
                          android:layout_width="@dimen/dimen10"
                          android:layout_height="@dimen/dimen10"
                          android:layout_centerVertical="true"
                          android:layout_marginStart="@dimen/dimen10"
                          android:src="@drawable/ic_star" />

                      <androidx.appcompat.widget.AppCompatTextView
                          android:layout_width="wrap_content"
                          android:layout_toEndOf="@+id/iv_star"
                          android:textSize="@dimen/text14"
                          android:text="4.6"
                          android:layout_alignParentBottom="true"
                          android:textColor="@color/black"
                          android:fontFamily="@font/poppins_regular"
                          android:layout_marginStart="@dimen/dimen5"
                          android:layout_height="match_parent"/>
                  </RelativeLayout>
              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="wrap_content"
                      android:text="AED 50.0"
                      android:layout_alignParentStart="true"
                      android:textSize="@dimen/text16"
                      android:layout_marginTop="@dimen/dimen5"
                      android:textColor="@color/black"
                      android:background="@drawable/strikethrough"
                      android:fontFamily="@font/poppins_regular"
                      android:layout_height="wrap_content"/>

                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="wrap_content"
                      android:text="AED 34.0"
                      android:layout_alignParentEnd="true"
                      android:textSize="@dimen/text16"
                      android:textStyle="bold"
                      android:layout_marginTop="@dimen/dimen5"
                      android:textColor="@color/black"
                      android:fontFamily="@font/poppins_regular"
                      android:layout_height="wrap_content"/>
              </RelativeLayout>

          </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>