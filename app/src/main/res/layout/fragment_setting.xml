<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/back"
            layout="@layout/layout_app_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_country"
                android:layout_marginStart="@dimen/dimen20"
                android:text="Country"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>

            <ImageView
                android:layout_width="@dimen/dimen50"
                android:src="@drawable/ic_flag"
                android:layout_toStartOf="@+id/iv_arrow"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_height="@dimen/dimen40"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:src="@drawable/ic_bottom_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>
            
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_language"
                android:layout_marginStart="@dimen/dimen20"
                android:text="Languages"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="English"
                android:textSize="@dimen/dimen16"
                android:fontFamily="@font/poppins_regular"
                android:layout_toStartOf="@+id/iv_arrow_lang"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_arrow_lang"
                android:src="@drawable/ic_bottom_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:text="@string/notification"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>


            <ImageView
                android:src="@drawable/ic_bottom_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_call"
                android:src="@drawable/ic_call"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:text="@string/contact_us"
                android:layout_toEndOf="@id/iv_call"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>


            <ImageView
                android:src="@drawable/ic_bottom_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_about"
                android:src="@drawable/ic_term"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:text="@string/about_us"
                android:layout_toEndOf="@id/iv_about"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>


            <ImageView
                android:src="@drawable/ic_bottom_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_term"
                android:src="@drawable/ic_gurantee"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:text="@string/terms"
                android:layout_toEndOf="@id/iv_term"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>


            <ImageView
                android:src="@drawable/ic_bottom_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dimen5"
        android:layout_margin="@dimen/dimen10"
        app:cardCornerRadius="@dimen/dimen10"
        android:layout_height="@dimen/dimen60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_privacy"
                android:src="@drawable/ic_unlock"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:text="@string/privacy"
                android:layout_toEndOf="@id/iv_privacy"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen16"/>


            <ImageView
                android:src="@drawable/ic_bottom_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

    </ScrollView>
</LinearLayout>