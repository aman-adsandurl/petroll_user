<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen10"
    app:cardElevation="@dimen/dimen5"
    app:cardCornerRadius="@dimen/dimen10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:src="@drawable/ic_shop_icon"
        android:layout_gravity="center"
        android:layout_width="@dimen/dimen150"
        android:layout_height="@dimen/dimen150"/>

        <RelativeLayout
            android:padding="@dimen/dimen5"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name"
            android:text="Pet Care Natural"
            android:textSize="@dimen/text14"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/tv_name"
                android:text="22 Iron Gate, Dubai"
                android:textSize="@dimen/text12" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>