<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dimen10"
    android:layout_margin="@dimen/dimen20"
    app:cardCornerRadius="@dimen/dimen8"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimen5"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_home_address"
            android:layout_width="@dimen/dimen40"
            android:layout_gravity="center"
            android:layout_height="@dimen/dimen40"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Mr. Allam"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen18" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/dimen25"
                        android:layout_height="@dimen/dimen25"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:src="@drawable/ic_edit_address" />

                    <ImageView
                        android:layout_toEndOf="@+id/iv_edit"
                        android:src="@drawable/ic_delete_address"
                        android:layout_marginEnd="@dimen/dimen4"
                        android:layout_marginStart="@dimen/dimen4"
                        android:layout_width="@dimen/dimen25"
                        android:layout_height="@dimen/dimen25"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:text="525, Etisalat, Dubai"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text14"
                android:layout_marginTop="@dimen/dimen5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="070 789989"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text14"
                android:layout_marginTop="@dimen/dimen5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>