<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/dimen20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen40"
        android:layout_height="@dimen/dimen40"
        android:layout_gravity="center"
        android:src="@drawable/ic_notification_row"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:id="@+id/tv_notification"
        tools:text="Tetingljakldjflkadflhadfhjkhskdfhkhdfkhjkhfkjsdhfjkh "
        android:layout_weight="2"
        android:layout_marginStart="@dimen/dimen10"
        android:layout_gravity="center"
        app:fontFamily="@font/poppins_regular"
        android:layout_marginEnd="@dimen/dimen20"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_notification_read"
        android:layout_width="@dimen/dimen20"
        android:layout_gravity="center"
        android:background="@drawable/notification_circle"
        android:layout_height="@dimen/dimen20"/>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/black"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dimen40"
        android:layout_marginEnd="@dimen/dimen40"
        android:layout_height="1dp"/>

</LinearLayout>