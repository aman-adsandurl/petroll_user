<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/back"
            layout="@layout/layout_app_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/icon_layout"
            layout="@layout/layout_icon"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dimen5"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimen10"
        app:cardElevation="@dimen/dimen5"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginEnd="@dimen/dimen20"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
         android:padding="@dimen/dimen5"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_shop_detail"
                android:layout_margin="@dimen/dimen5"
                android:layout_width="@dimen/dimen80"
                android:layout_height="@dimen/dimen80"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen5"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Pet Care Natural Happy"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/dimen5"
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/text18"
                    android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/iv_fav"
                        android:layout_width="@dimen/dimen20"
                        android:layout_height="@dimen/dimen20"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_fav_top"
                        app:tint="@color/skip_circle_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen5"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_address"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/dimen20"
                    app:cardBackgroundColor="@color/light_grey"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:paddingStart="@dimen/dimen10"
                        android:paddingEnd="@dimen/dimen10"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_loc"
                            android:src="@drawable/ic_location"
                            android:layout_width="@dimen/dimen15"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/dimen15"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_loc"
                            android:layout_marginStart="@dimen/dimen5"
                            android:fontFamily="@font/poppins_regular"
                            android:text="22 Iron Gate, Dubai"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/cv_address"
                        android:layout_height="@dimen/dimen20">

                        <ImageView
                            android:id="@+id/iv_star"
                            android:layout_width="@dimen/dimen10"
                            android:layout_height="@dimen/dimen10"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dimen10"
                            android:src="@drawable/ic_star" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/iv_star"
                        android:textSize="@dimen/text14"
                        android:text="4.6"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="@dimen/dimen5"
                        android:layout_height="match_parent"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_delivery"
                        android:layout_weight="5"
                        android:textSize="@dimen/text12"
                        android:textColor="@color/skip_circle_color"
                        android:text="@string/delivery_here"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/rl_follow"
                        android:layout_marginEnd="@dimen/dimen5"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/follow"
                            android:layout_marginEnd="@dimen/dimen5"
                            android:id="@+id/tv_follow"
                            android:textSize="@dimen/text12"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/iv_follow_icon"
                            android:src="@drawable/ic_follow"
                            android:layout_width="@dimen/dimen20"
                            android:layout_toEndOf="@+id/tv_follow"
                            android:layout_height="@dimen/dimen20"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_marginTop="@dimen/dimen10"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_height="wrap_content">

<!--        todo to implement it dynamically -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cvTag"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_width="wrap_content"
            app:singleSelection="true"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="@string/dog"
                app:chipCornerRadius="@dimen/dimen5"
                app:chipStrokeColor="@color/black"
                app:chipSurfaceColor="@color/light_grey"
                app:chipBackgroundColor="@color/white"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="@string/cat"
                app:chipCornerRadius="@dimen/dimen5"
                app:chipStrokeColor="@color/black"
                app:chipSurfaceColor="@color/light_grey"
                app:chipBackgroundColor="@color/white"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="@string/bird"
                app:chipCornerRadius="@dimen/dimen5"
                app:chipStrokeColor="@color/black"
                app:chipSurfaceColor="@color/light_grey"
                app:chipBackgroundColor="@color/white"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="@string/rabbits"
                app:chipCornerRadius="@dimen/dimen5"
                app:chipStrokeColor="@color/black"
                app:chipSurfaceColor="@color/light_grey"
                app:chipBackgroundColor="@color/white"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="@string/fish"
                app:chipCornerRadius="@dimen/dimen5"
                app:chipStrokeColor="@color/black"
                app:chipSurfaceColor="@color/light_grey"
                app:chipBackgroundColor="@color/white"
                android:layout_height="wrap_content"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.petroll.utils.ServiceLayout
            android:id="@+id/food_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/accesory_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/health_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <com.petroll.utils.ServiceLayout
            android:id="@+id/toys_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dimen5"
            android:layout_weight="1"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/pets_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.petroll.utils.ServiceLayout
            android:id="@+id/medicine_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/grooming_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/clothing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.petroll.utils.ServiceLayout
            android:id="@+id/bed_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

        <com.petroll.utils.ServiceLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen5"
            android:gravity="center" />

<!--        <com.petroll.utils.ServiceLayout-->
<!--            android:id="@+id/clothing_layout"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginEnd="@dimen/dimen5"-->
<!--            android:gravity="center" />-->

    </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>