<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard.community.services.NewsEventActivity">

    <include
        android:id="@+id/back"
        layout="@layout/layout_app_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen10"
        android:layout_marginVertical="@dimen/dimen5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen5"
            android:paddingVertical="@dimen/dimen5">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dimen70"
                android:layout_height="@dimen/dimen80"
                app:cardBackgroundColor="@color/light_blue2"
                app:cardCornerRadius="@dimen/dimen10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen50"
                    android:layout_height="@dimen/dimen50"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_event" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/text14"
                    tools:ignore="SpUsage"
                    android:text="Events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10"
                    android:textSize="@dimen/text14"
                    tools:ignore="SpUsage"
                    android:text="Lorem ipsum dolor sit amet, consectetur" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"
                android:src="@drawable/forward_arrow" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen10"
        android:layout_marginVertical="@dimen/dimen5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen5"
            android:paddingVertical="@dimen/dimen5">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dimen70"
                android:layout_height="@dimen/dimen80"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="@dimen/dimen10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen50"
                    android:layout_height="@dimen/dimen50"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_news" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/text14"
                    tools:ignore="SpUsage"
                    android:text="Events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10"
                    android:textSize="@dimen/text14"
                    tools:ignore="SpUsage"
                    android:text="Lorem ipsum dolor sit amet, consectetur" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"
                android:src="@drawable/forward_arrow" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</LinearLayout>