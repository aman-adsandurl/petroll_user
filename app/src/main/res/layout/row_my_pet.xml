<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen10"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen10"
    app:cardElevation="@dimen/dimen10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_my_pet"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/dimen10"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text16"
                android:text="Allie"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text16"
                android:text="Golden Retriver"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text16"
                    android:text="Age - 04"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text16"
                    android:text="Female"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/indicator_highlight"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text16"
                android:text="Eligible for Mating"
                android:textColor="@color/indicator_highlight"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_overflow_menu"
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen30"
            android:layout_height="@dimen/dimen30"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>