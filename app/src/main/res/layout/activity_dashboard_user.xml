<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:fitsSystemWindows= "true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/overlay_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/screen_bg" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen200"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_marginTop="@dimen/dimen20"
                android:layout_marginEnd="@dimen/dimen20" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20"
                app:dotsColor="@color/indicator_not_active"
                app:dotsCornerRadius="@dimen/dimen8"
                app:dotsSize="@dimen/dimen16"
                app:dotsSpacing="@dimen/dimen4"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/indicator_highlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen200"
                android:layout_marginTop="@dimen/dimen20">

                <com.petroll.utils.ServiceLayout
                    android:id="@+id/market_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.petroll.utils.ServiceLayout
                    android:id="@+id/service_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <com.petroll.utils.ServiceLayout
                android:id="@+id/community_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

<!--    to check if going in base activity-->
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottm_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_backgroundBottomColor="@color/bottom_nav_color"
        android:layout_alignParentBottom="true"
        app:mbn_circleColor="@color/indicator_highlight"
        app:mbn_selectedIconColor="@color/white"
        app:mbn_defaultIconColor="@color/bottom_nav_inact"/>

</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/Style_TextView"
        android:background="@color/overlay_bg"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/navigation_menu">

        <RelativeLayout
            android:id="@+id/header_bg"
            android:background="@drawable/screen_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>